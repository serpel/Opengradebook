<div id="content-header">
  <%= image_tag("/images/examination/show_exam.png") %>
  <h1>Calificando</h1>
	<% student = Student.find(@nota.student_id)%>
  <h3 style="text-transform:capitalize"><%= student.first_name %> <%= student.last_name %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
    <div id="application-list">
      <% form_for(@nota) do |f| %>
        <%= f.error_messages %>
        <p style="display:none">
          <%= f.label :subject_id %><br />
          <%= f.text_field :subject_id %>
        </p>
        <p style="display:none">
          <%= f.label :student_id %><br />
          <%= f.text_field :student_id %>
        </p>
          <% if @nota.subject.batch_id == 40 or @nota.subject.batch_id == 53 %>
        <table id="listing" align="center" width="100%" cellpadding="0" cellspacing="0">
          <tr class="tr-head">
            <th colspan="7"><%= "#{t('semestre1')}" %></th>
            <th colspan="7"><%= "#{t('semestre2')}" %></th>
            <th></th>
          </tr>
          <tr class="tr-head">
            <th colspan="3"><%= "#{t('partial1')}" %></th>
            <th colspan="4"><%= "#{t('partial2')}" %></th>
            <th colspan="3"><%= "#{t('partial3')}" %></th>
            <th colspan="4"><%= "#{t('partial4')}" %></th>
            <th></th>
          </tr>
      <tr class="tr-head">
        <% 2.times do |l| %>
            <th><%= f.label "E" %></th>
            <th><%= f.label "A" %></th>
            <th><%= f.label "N" %></th>
            <th><%= f.label "E" %></th>
            <th><%= f.label "A" %></th>
            <th><%= f.label "R1" %></th>
            <th><%= f.label "R2" %></th>
        <% end %>
        <th><%= f.label "#{t('options')}" %></th>
      </tr>
        <tr class="tr-read-even">
            <td class="col-0"><%= f.text_field :examen_1, :size => 2 %></td>
            <td class="col-0"><%= f.text_field :acumulado_1, :size => 2 %></td>
            <td class="col-0"><%= f.text_field :recovery, :size => 2 %></td>
            <td class="col-0"><%= f.text_field :examen_2, :size => 2 %></td>
            <td class="col-0"><%= f.text_field :acumulado_2, :size => 2 %></td>
            <td class="col-0"><%= f.text_field :recuperacion_1, :size => 2 %></td>
            <td class="col-0"><%= f.text_field :recuperacion_2, :size => 2 %></td>
            <td class="col-0"><%= f.text_field :examen_3, :size => 2 %></td>
            <td class="col-0"><%= f.text_field :acumulado_3, :size => 2 %></td>
            <td class="col-0"><%= f.text_field :recovery2, :size => 2 %></td>
            <td class="col-0"><%= f.text_field :examen_4, :size => 2 %></td>
            <td class="col-0"><%= f.text_field :acumulado_4, :size => 2 %></td>
            <td class="col-0"><%= f.text_field :recuperacion_3, :size => 2 %></td>
            <td class="col-0"><%= f.text_field :recuperacion_4, :size => 2 %></td>
            <td><%= f.submit "#{t('grade_texting')}" %></td>
        </tr>
        <tr class="tr-blank"></tr>
        </table>
           <% else %>
              <table id="listing" align="center" width="100%" cellpadding="0" cellspacing="0">
                <tr class="tr-head">
                  <% 4.times do |l| %>
                      <th><%= f.label "#{t('exam'+(l+1).to_s)}" %></th>
                      <th><%= f.label "#{t('acum'+(l+1).to_s)}" %></th>
                      <th><%= f.label "#{t('recov'+(l+1).to_s)}" %></th>
                  <% end %>
                  <th><%= f.label "#{t('recovery')}" %></th>
                  <th><%= f.label "#{t('options')}" %></th>
                </tr>
                <tr class="tr-read-even">
                  <td class="col-0"><%= f.text_field :examen_1, :size => 2 %></td>
                  <td class="col-0"><%= f.text_field :acumulado_1, :size => 2 %></td>
                  <td class="col-0"><%= f.text_field :recuperacion_1, :size => 2 %></td>
                  <td class="col-0"><%= f.text_field :examen_2, :size => 2 %></td>
                  <td class="col-0"><%= f.text_field :acumulado_2, :size => 2 %></td>
                  <td class="col-0"><%= f.text_field :recuperacion_2, :size => 2 %></td>
                  <td class="col-0"><%= f.text_field :examen_3, :size => 2 %></td>
                  <td class="col-0"><%= f.text_field :acumulado_3, :size => 2 %></td>
                  <td class="col-0"><%= f.text_field :recuperacion_3, :size => 2 %></td>
                  <td class="col-0"><%= f.text_field :examen_4, :size => 2 %></td>
                  <td class="col-0"><%= f.text_field :acumulado_4, :size => 2 %></td>
                  <td class="col-0"><%= f.text_field :recuperacion_4, :size => 2 %></td>
                  <td class="col-0"><%= f.text_field :recovery, :size => 2 %></td>
                  <td><%= f.submit "#{t('grade_texting')}" %></td>
                </tr>
                <tr class="tr-blank"></tr>
              </table>
            <%end%>
      <% end %>
    </div>
</div>
