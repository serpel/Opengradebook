

<div class="label-field-pair">
  <label for="department"><%= t('select_department') %></label>
  <div class="text-input-bg">

    <%= select :select_department, :department, @departments.map { |s| [s.code.to_s + ' ' +s.name.to_s, s.id] },
      {:prompt => "#{t('select_department')}"},
      {:onChange => "#{remote_function(:url => {:action => "to_employees"}, :with => "'dept_id='+value",
      :before => "Element.show('loader')",
      :success => "Element.hide('loader')")}"} %>
  </div>
</div>
