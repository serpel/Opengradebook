<script type="text/javascript" >
$('table tr').each(function(){
  $(this).find('th').first().addClass('first');
  $(this).find('th').last().addClass('last');
  $(this).find('td').first().addClass('first');
  $(this).find('td').last().addClass('last');
});

$('table tr').first().addClass('row-first');
$('table tr').last().addClass('row-last');

</script>

<h3><%= "#{t('gradebooks')}" %></h3>

<div id="page-yield">
   <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div><%= image_tag("/images/buttons/Download-32.png") %> <%= link_to "#{t('export')}", {:controller => 'student', :action => 'get_scores', :id=>@id.to_s+'.xls' } %></div>
  <div id="application-list">
    <table id="listing" cellpadding="1" cellspacing="1">
      <thead>
        <tr>
          <th></th>
          <% 4.times do |l| %>
            <th colspan="3"><%= "#{t('partial'+(l+1).to_s)}" %></th>
          <% end %>
          <th></th>
        </tr>
        <tr>
          <th><%= "#{t('assigment')}" %></th>
          <% 4.times do |l| %>
            <th><%= "#{t('exam'+(l+1).to_s)}" %></th>
            <th><%= "#{t('acum'+(l+1).to_s)}" %></th>
            <th><%= "#{t('recov'+(l+1).to_s)}" %></th>
            <th><%= "#{t('total')}" %></th>
          <% end %>
          <th><%= "#{t('average')}" %></th>
       </tr>
      </thead>
      <tbody>
        <% @student_scores.each do |student_note| %>
          <tr class="tr-read-<%= cycle('odd', 'even') %>">
            <% sub = Subject.find(student_note.subject_id) %>
            <td class="col-1" style="text-transform:capitalize"><%= sub.name %></td>
            <% total_1 = (student_note.examen_1.to_f + student_note.acumulado_1.to_f).round 2 %>
            <% total_2 = (student_note.examen_2.to_f + student_note.acumulado_2.to_f).round 2 %>
            <% total_3 = (student_note.examen_3.to_f + student_note.acumulado_3.to_f).round 2 %>
            <% total_4 = (student_note.examen_4.to_f + student_note.acumulado_4.to_f).round 2 %>
            <td class="col-1"><%= student_note.examen_1.to_f %></td>
            <td class="col-1"><%= student_note.acumulado_1.to_f %></td>
            <td class="col-1"><%= student_note.recuperacion_1.to_f %></td>
            <td class="col-1"><%= total_1 %></td>
            <td class="col-1"><%= student_note.examen_2.to_f %></td>
            <td class="col-1"><%= student_note.acumulado_2.to_f %></td>
            <td class="col-1"><%= student_note.recuperacion_2.to_f %></td>
            <td class="col-1"><%= total_2 %></td>
            <td class="col-1"><%= student_note.examen_3.to_f  %></td>
            <td class="col-1"><%= student_note.acumulado_3.to_f %></td>
            <td class="col-1"><%= student_note.recuperacion_3.to_f %></td>
            <td class="col-1"><%= total_3 %></td>
            <td class="col-1"><%= student_note.examen_4.to_f  %></td>
            <td class="col-1"><%= student_note.acumulado_4.to_f  %></td>
            <td class="col-1"><%= student_note.recuperacion_4.to_f %></td>
            <td class="col-1"><%= total_4 %></td>

            <td class="col-1"><%= ((total_1 + total_2 + total_3 + total_4)/4).round 2 %></td>
            <% if @student_scores.count == 0 %>
              <td class="col-1">0.0</td>
              <td class="col-1">0.0</td>
              <td class="col-1">N/A</td>
              <td class="col-1">0.0</td>
              <td class="col-1">0.0</td>
              <td class="col-1">N/A</td>
              <td class="col-1">0.0</td>
              <td class="col-1">0.0</td>
              <td class="col-1">N/A</td>
              <td class="col-1">0.0</td>
              <td class="col-1">0.0</td>
              <td class="col-1">N/A</td>
              <td class="col-1">N/A</td>
            <% end %>
          </tr>
          <tr class="tr-blank"></tr>
        <% end %>
      </tbody>
    </table>
  </div>

